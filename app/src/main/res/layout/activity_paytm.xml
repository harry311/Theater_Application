<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paytm">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Ticket"
            android:layout_marginTop="20sp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="150sp"
            android:layout_height="70sp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/logo"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shadow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay With Paytm"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Using paytm postpaid, Paytm Wallet, Saved cards or  UPI"
                android:layout_marginTop="45sp"
                android:layout_marginStart="25sp"
                android:layout_marginEnd="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Mobile Number"
                android:textSize="20sp"
                android:layout_marginTop="85sp"
                android:layout_marginStart="20sp"
                android:textColor="@color/black" />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:layout_marginTop="120sp"
                android:paddingStart="20sp"
                android:text="+91"
                android:textColor="@color/gray"
                android:background="@drawable/textview_border"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"/>

            <Button
                android:id="@+id/proceed"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Proceed"
                android:layout_marginTop="180sp"
                android:layout_marginEnd="20sp"
                android:layout_marginStart="20sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/blue"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15sp"
                android:layout_marginTop="260sp"
                android:background="@color/blue" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15sp"
                android:layout_marginTop="275sp"
                android:background="@color/nblue" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="150sp"
            android:text="Secure Payment..!"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>